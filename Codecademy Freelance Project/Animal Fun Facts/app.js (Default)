import { animals } from './animals';
import React from 'react';
import {createRoot} from 'react-dom/client';

const container = document.getElementById('app');
const root = createRoot(container);
const title = "";
const showBackground = false; //Can be true||false
{title === '' ?'Click an animal for a fun fact':title}
const background = 
    <img 
    className ='background' 
    alt='ocean' 
    src='/images/ocean.jpg'
    />;

const images = [];
for (const animal in animals) {
   images.push(
    <img 
      key = {animal}
      className ='animal'
      alt = {animal}
      src = {animals[animal].image}
      aria-label = {animal}
      role ='button'
      onClick = {displayFact}
    />
  );
};

const animalFacts = 
  (<div>
    <h1>{title === '' ?'Click an animal for a fun fact':title}</h1>
    {showBackground && background}
    <div className='animals'>
    {images}
    </div>
    <p id='fact'></p>
  </div>);

function displayFact(e) {
  const selectedAnimal = animals[e.target.alt].facts;
  const randomNum = Math.floor(Math.random() * selectedAnimal.length);
  const facts = selectedAnimal[randomNum];
  document.getElementById('fact').innerHTML = facts;
};

root.render(animalFacts);

ReactDOM.render(animalFacts, document.getElementById('root'));